# FinClick.AI Production Environment Variables
# Copy this file to .env.production and update the values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
APP_VERSION=1.0.0
APP_NAME=FinClick.AI
APP_URL=https://finclick.ai
API_URL=https://api.finclick.ai

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Configuration
POSTGRES_HOST=postgres-master
POSTGRES_PORT=5432
POSTGRES_DB=finclick_production
POSTGRES_USER=finclick_prod
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_REPLICATION_USER=replication_user
POSTGRES_REPLICATION_PASSWORD=CHANGE_ME_REPLICATION_PASSWORD

# MongoDB Configuration
MONGO_HOST=mongo-primary
MONGO_PORT=27017
MONGO_DB=finclick_production
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_MONGO_PASSWORD

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# ==============================================
# MESSAGE QUEUE CONFIGURATION
# ==============================================
RABBITMQ_HOST=rabbitmq-cluster
RABBITMQ_PORT=5672
RABBITMQ_USER=finclick_prod
RABBITMQ_PASSWORD=CHANGE_ME_RABBITMQ_PASSWORD
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://finclick_prod:CHANGE_ME_RABBITMQ_PASSWORD@rabbitmq-cluster:5672/

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT Configuration
JWT_SECRET_KEY=CHANGE_ME_VERY_LONG_SECURE_JWT_SECRET_KEY_AT_LEAST_256_BITS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Keys
ENCRYPTION_KEY=CHANGE_ME_32_CHARACTER_ENCRYPTION_KEY
HASH_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_KEY
SESSION_TIMEOUT=3600

# ==============================================
# AI SERVICE CONFIGURATION
# ==============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-CHANGE_ME_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration
GEMINI_API_KEY=CHANGE_ME_GEMINI_API_KEY
GEMINI_MODEL=gemini-pro

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=CHANGE_ME_ANTHROPIC_API_KEY

# ==============================================
# FINANCIAL DATA PROVIDERS
# ==============================================

# Financial Modeling Prep
FMP_API_KEY=CHANGE_ME_FMP_API_KEY
FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=CHANGE_ME_ALPHA_VANTAGE_KEY

# Quandl
QUANDL_API_KEY=CHANGE_ME_QUANDL_API_KEY

# Yahoo Finance (if used)
YAHOO_FINANCE_API_KEY=CHANGE_ME_YAHOO_API_KEY

# ==============================================
# PAYMENT PROCESSING
# ==============================================

# Stripe Configuration (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_CHANGE_ME_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME_STRIPE_WEBHOOK_SECRET

# PayPal Configuration (Production)
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=CHANGE_ME_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=CHANGE_ME_PAYPAL_CLIENT_SECRET

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USERNAME=noreply@finclick.ai
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD

# Email Templates
FROM_EMAIL=noreply@finclick.ai
FROM_NAME=FinClick.AI
SUPPORT_EMAIL=support@finclick.ai

# ==============================================
# AWS CONFIGURATION
# ==============================================

# AWS General
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY

# S3 Configuration
AWS_S3_BUCKET=finclick-production-files
AWS_S3_REGION=us-east-1
AWS_BACKUP_BUCKET=finclick-production-backups

# CloudFront (if used)
AWS_CLOUDFRONT_DISTRIBUTION_ID=CHANGE_ME_CLOUDFRONT_ID

# ==============================================
# LOGGING AND MONITORING
# ==============================================

# Log Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Sentry Configuration
SENTRY_DSN=https://CHANGE_ME_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# New Relic (if used)
NEW_RELIC_LICENSE_KEY=CHANGE_ME_NEW_RELIC_KEY
NEW_RELIC_APP_NAME=FinClick.AI Production

# DataDog (if used)
DATADOG_API_KEY=CHANGE_ME_DATADOG_API_KEY

# ==============================================
# GRAFANA AND PROMETHEUS
# ==============================================

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_ME_GRAFANA_SECRET_KEY

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# ==============================================
# ELASTICSEARCH CONFIGURATION
# ==============================================
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=CHANGE_ME_ELASTIC_PASSWORD
ELASTICSEARCH_URL=http://elasticsearch:9200

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=https://finclick.ai,https://www.finclick.ai
CORS_CREDENTIALS=true

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt
UPLOAD_PATH=/app/uploads

# ==============================================
# CACHE CONFIGURATION
# ==============================================
CACHE_TTL=3600
CACHE_PREFIX=finclick:
CACHE_MAX_KEYS=10000

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME_SLACK_WEBHOOK
SLACK_CHANNEL=#alerts

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=CHANGE_ME_TWILIO_SID
TWILIO_AUTH_TOKEN=CHANGE_ME_TWILIO_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# ANALYTICS CONFIGURATION
# ==============================================

# Google Analytics
GA_TRACKING_ID=UA-CHANGE_ME-1

# Mixpanel
MIXPANEL_TOKEN=CHANGE_ME_MIXPANEL_TOKEN

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=CHANGE_ME_BACKUP_ENCRYPTION_KEY

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=128

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_BETA_FEATURES=false

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# Supabase (if used)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=CHANGE_ME_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=CHANGE_ME_SUPABASE_SERVICE_KEY

# Firebase (if used)
FIREBASE_PROJECT_ID=finclick-production
FIREBASE_PRIVATE_KEY=CHANGE_ME_FIREBASE_PRIVATE_KEY
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@finclick-production.iam.gserviceaccount.com

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
SSL_CERT_PATH=/etc/nginx/ssl/finclick.ai.crt
SSL_KEY_PATH=/etc/nginx/ssl/finclick.ai.key
SSL_CA_PATH=/etc/nginx/ssl/finclick.ai.ca.crt

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
COMPOSE_PROJECT_NAME=finclick-production
DOCKER_HOST_IP=127.0.0.1

# ==============================================
# MAINTENANCE MODE
# ==============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please try again later.

# ==============================================
# ENVIRONMENT VERIFICATION
# ==============================================
# This should always be 'production' for production environment
ENVIRONMENT_VERIFICATION=production